<Page
    x:Class="WSAFileLink.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WSAFileLink"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="adbPath" TextChanged="adbPath_TextChanged" Header="Adb path:" PlaceholderText="Adb path" MinWidth="268" MaxWidth="200"/>
            <ComboBox x:Name="backgroundMaterial" ItemsSource="{x:Bind material}" SelectionChanged="backgroundMaterial_SelectionChanged" Header="Background Material:" Width="268" Margin="0,8,0,0">
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>
